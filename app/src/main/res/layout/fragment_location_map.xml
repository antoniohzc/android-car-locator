<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".locationmap.ui.LocationMapFragment">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/btnCarLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorSemiTransparent"
            android:elevation="@dimen/locationmap_elevation_button"
            android:src="@drawable/btn_show_car"/>

        <ImageButton
            android:id="@+id/btnAddToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/locationmap_margin_icon_button"
            android:layout_marginStart="@dimen/locationmap_margin_icon_button"
            android:layout_marginRight="@dimen/locationmap_margin_icon_button"
            android:layout_marginEnd="@dimen/locationmap_margin_icon_button"
            android:backgroundTint="@color/colorSemiTransparent"
            android:elevation="@dimen/locationmap_elevation_button"
            android:src="@drawable/btn_add_list"/>

        <ImageButton
            android:id="@+id/btnSaveCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorSemiTransparent"
            android:elevation="@dimen/locationmap_elevation_button"
            android:src="@drawable/btn_set_current"/>

    </LinearLayout>

</RelativeLayout>
